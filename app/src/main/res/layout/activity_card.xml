<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:me.grantland.="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.wright.paul.allergytravelcardapp.userInterface.CardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="60dp"
            android:clickable="true"
            android:layout_height="60dp" />


        <TextView
            android:id="@+id/cardTitleTextView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.00"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/flagImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/allergyImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/cardDividerImageView1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_blue" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/cardBodyTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:textSize="32sp"
            android:maxLines="9"
            android:paddingBottom="1dp" />

    </LinearLayout>

</LinearLayout>
